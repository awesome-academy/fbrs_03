<li id="update_<%= user.id %>">
  <%= gravatar_for user, size: Settings.gravatar_size.size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <div style="float: right">
      <%= link_to t("delete"), user, method: :delete, class: "fa fa-trash-o btn btn-danger",
        data: {confirm: t("sure")} %>
      <%= link_to user.admin? ? t("set_user") : t("set_admin"),
        user_path(user), method: :patch, remote: true, class: "fa fa-check btn btn-success" %>
    </div>
  <% end %>
</li>
