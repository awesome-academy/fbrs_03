<li>
  <%= gravatar_for user, size: Settings.gravatar_size.size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to t("delete"), user, method: :delete,
      data: {confirm: t("sure")} %>
  <% end %>
  <% if current_user.admin? && user.role == t("user") %>
    | <%= link_to t("set_admin"), setadmin_user_path(user), method: :patch %>
  <% elsif current_user.admin? && user.role == t("admin") %>
    | <%= link_to t("set_user"), setadmin_user_path(user), method: :patch %>
  <% end %>
</li>
