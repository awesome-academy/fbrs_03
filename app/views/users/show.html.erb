<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <div class="clearfix">
        <h1><%= gravatar_for @user %></h1><br>
        <h2><%= @user.name %></h2><br>
        <p><%= t("phone_num") %><%= @user.phone %></p><br>
        <p><%= t("address") %><%= @user.address %></p><br>
      </div>
    </section>
  </aside>
</div>
