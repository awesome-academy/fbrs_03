<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="clearfix">
        <h1><%= gravatar_for @user %></h1><br>
        <h2><%= @user.name %></h2><br>
        <p><%= t("phone_num") %><%= @user.phone %></p><br>
        <p><%= t("email") %><%= @user.email %></p><br>
        <p><%= t("address") %><%= @user.address %></p><br>
        <p><%= t("role") %><%= @user.role %></p><br>
      </div>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= render "follow_form" if user_signed_in? %>
  </aside>
  <div class="col-md-8">
    <h3><%= t "activity" %></h3>
    <% if @activities.any? %>
      <% @activities.each do |activity| %>
        <ul class="users follow">
          <%= render partial: "activities/activities", locals: {activity: activity} %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>
