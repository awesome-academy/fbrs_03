<% provide :title, t("book_index") %>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-lg-3">
      <div class="book">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_img.url(:book_index), class: "image"%>
        </a>
        <p><%= book.title %></p>
      </div>
    </div>
  <% end %>
</div>

<%= will_paginate %>
