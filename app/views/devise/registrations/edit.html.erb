<% provide :title, t("edit") %>

<div class="col-md-6 col-md-offset-3">
  <div class="edit-book-form">
    <h2><%= t("edit") %> <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :phone, required: true, autofocus: true %>
        <%= f.input :address, required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t("current_confirm") %><%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :password, hint: t("leave_blank"), required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: t("we_need"), required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, t("update"), class: "btn-custom2" %>
      </div>
    <% end %>
    <h3><%= t "cancel" %></h3>
    <p><%= t("unhappy") %><%= link_to t("cancel"), registration_path(resource_name), data: { confirm: t("sure") }, method: :delete %></p>
    <%= link_to t("back"), :back %>
  </div>
</div>
